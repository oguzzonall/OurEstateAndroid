<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/evAramaSonucuImageViewAdapter"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@mipmap/image" />

    <TextView
        android:id="@+id/evAramaSonucuTextViewAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="EFESEFSE FSEFSEF SES FSEFES ESE" />

    <Button
        android:id="@+id/evAramaSonucuButtonAdapter"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:background="@drawable/buton_selector"
        android:text="Detay" />

</LinearLayout>